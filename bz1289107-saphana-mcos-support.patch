+       if grep -q "ACTIVE" <<< "$FULL_SR_STATUS"; then
+          super_ocf_log info "FLOW $FUNCNAME SOK"
+          set_hana_attribute "$remoteNode" "SOK" ${ATTR_NAME_HANA_SYNC_STATUS[@]}
