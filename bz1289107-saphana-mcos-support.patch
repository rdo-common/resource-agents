+{
+    super_ocf_log info "FLOW $FUNCNAME ($*)"
+    local rc=-1 srRc=0 all_nodes_other_side="" n="" siteParam=""
+    if [ -n "$rem_SR_name" ]; then
+       siteParam="--site=$rem_SR_name"
